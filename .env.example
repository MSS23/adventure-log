# üîê PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this file to .env.local and fill in your actual values

# ‚úÖ REQUIRED - Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ‚úÖ REQUIRED - Application URL
# Local development: http://localhost:3004
# Production: https://adventure-log-azure.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3004

# üìç OPTIONAL - Mapbox for Enhanced Location Features
# Sign up at https://mapbox.com for free tier
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# ü§ñ OPTIONAL - GROQ AI for Trip Planner
# Sign up at https://console.groq.com for free tier
GROQ_API_KEY=your_groq_api_key_here

# üîÑ OPTIONAL - Redis (Upstash) - For distributed rate limiting
# Sign up at https://upstash.com for free tier (10K commands/day)
# Required for production rate limiting across serverless instances
UPSTASH_REDIS_REST_URL=your_upstash_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_rest_token

# üìä OPTIONAL - Sentry Error Monitoring
# Sign up at https://sentry.io for free tier (5K errors/month)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=adventure-log

# üåç PRODUCTION ENVIRONMENT
NODE_ENV=production